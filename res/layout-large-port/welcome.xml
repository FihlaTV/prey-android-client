<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
    android:background="@drawable/bacg_xhdpi_2x"
    android:orientation="vertical"
    android:id="@+id/linear_layout_welcome"
    >

 

 
 
     <LinearLayout
         android:layout_gravity="center"
         android:layout_width="298dp"
         android:layout_height="wrap_content" >

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="642dp"
             android:src="@drawable/logo_prey_2x" />

     </LinearLayout>

    <Button
        android:id="@+id/btn_welcome_olduser"
        style="@style/PreyButton2.Large"
        android:layout_width="fill_parent"
        android:text="@string/already_prey_user"
         />

    <Button
        android:id="@+id/btn_welcome_newuser"
        style="@style/PreyButton2.Large"
        android:layout_width="fill_parent"
        android:text="@string/new_user"
         /> 

</LinearLayout>
 
