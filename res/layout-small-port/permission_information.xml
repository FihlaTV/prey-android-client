<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bacg_xhdpi_2x"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/top_right_success"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ico_protect_2x" />

    <TextView
        android:id="@+id/congrats_h1_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/permission_title_h1"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center|center_vertical|left"
         />

    <TextView
        android:id="@+id/congrats_h2_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_vertical|left"
        android:text="@string/permission_body_text"
        android:textColor="@color/dark_paragraph"
        android:textSize="15sp"
         />
    
     <Button
         android:id="@+id/congrats_btn_ok"
         style="@style/PreyButton2.Small"
         android:text="@string/go_to_congratulations" />

</LinearLayout>
