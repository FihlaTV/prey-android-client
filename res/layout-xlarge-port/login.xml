<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bacg_xhdpi_2x"
    android:orientation="vertical"
      >

 

     <LinearLayout
         android:layout_gravity="center"
         android:layout_width="298dp"
         android:layout_height="wrap_content" >

     	<ImageView
         android:layout_width="wrap_content"
         android:layout_height="642dp"
         android:src="@drawable/logo_prey_2x" />

     </LinearLayout>

    <Button
        android:id="@+id/login_btn_cp"
        style="@style/PreyButton2.Large"
        android:layout_width="fill_parent"
        android:text="@string/login_cp"/>

    <Button
        android:id="@+id/login_btn_settings"
        style="@style/PreyButton2.Large"
        android:layout_width="fill_parent"
        android:text="@string/manage_prey_settings"/>

</LinearLayout>
 
