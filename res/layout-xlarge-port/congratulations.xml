<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_header"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bacg_xhdpi_2x"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/top_right_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginRight="170dp"
        android:layout_marginTop="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ico_check_2x" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:gravity="center" >
    	<TextView
        android:id="@+id/congrats_h1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/device_set_up_h1"
        android:textColor="@color/darker_txt"
        android:textSize="30sp"
        android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/congrats_h2_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="@string/new_account_congratulations_text"
        android:textColor="@color/lighter_txt"
        android:textSize="20sp" />
    
     <Button
         android:id="@+id/congrats_btn_ok"
         style="@style/PreyButton.Large"
         android:layout_marginTop="50dp"
         android:text="@string/go_to_settings" />

</LinearLayout>
